# DATABASE CONFIGURATION
# Para desenvolvimento local (SQLite):
DATABASE_URL=sqlite:///./sistemaxi_local.db

# Para produção (PostgreSQL) - descomente e configure:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/sistemaxi

# Exemplos de configuração PostgreSQL:
# LOCAL: DATABASE_URL=postgresql://postgres:123456@localhost:5432/squad
# NEON: DATABASE_URL=postgresql://user:pass@ep-example.us-east-1.aws.neon.tech/neondb
# SUPABASE: DATABASE_URL=postgresql://postgres:pass@db.project.supabase.co:5432/postgres

# JWT CONFIGURATION
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ENVIRONMENT
ENVIRONMENT=development 